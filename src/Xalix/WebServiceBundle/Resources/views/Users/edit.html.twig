{% extends 'WebServiceBundle:Default:base.html.twig' %}
{% block body %}
<div class="container">
        <div class="row">
            <div class="col-lg-6"><h2>Editar Usuario de Servicio Web</h2></div>
        </div>
        <hr/>
        <div class="row">
            <div class="col-lg-10 col-offset-1">
