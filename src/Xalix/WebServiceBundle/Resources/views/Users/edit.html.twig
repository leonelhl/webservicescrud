{{ form_start(delete_form, {'attr': {'style':'display:inline' } } ) }}
{{ form_widget(delete_form.submit,{'attr': {'class':'btn btn-primary' } }  ) }}
{{ form_rest(delete_form) }}
{{ form_end(delete_form) }}
</ul>
</div>
</div>
</div>
